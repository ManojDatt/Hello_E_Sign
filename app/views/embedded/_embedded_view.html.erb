<script type="text/javascript">

  HelloSign.init("#{HelloSign.client_id}");
  HelloSign.open({
      url: "#{raw @sign_url}",
      allowCancel: true,
      skipDomainVerification: true,
      messageListener: function(eventData) {
          alert("HelloSign event received");
      }
  });
</script>